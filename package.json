{
  "name": "better-file-directory",
  "displayName": "Better File Directory",
  "description": "Visually manage your files with large thumbnails. Move files easily between folders using a modern grid view.",
  "publisher": "ttdragon0722",
  "author": "Rex Lai",
  "license": "MIT",
  "icon": "icon.png",
  "version": "0.0.12",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "explorer",
    "file-manager",
    "directory",
    "tree-view"
  ],
  "activationEvents": [
    "onCommand:better-file-directory.current",
    "onCommand:better-file-directory.open",
    "onCommand:better-file-directory.split",
    "onCommand:better-file-directory.openFavorite",
    "onCommand:better-file-directory.addFavorite",
    "onWebviewPanel:betterFileDirectory",
    "onCommand:better-file-directory.revealCurrentInOS"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ttdragon0722/better-file-directory.git"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "better-file-directory.current",
        "title": "Open Better File View",
        "category": "Better File Directory",
        "icon": "$(folder-opened)"
      },
      {
        "command": "better-file-directory.open",
        "title": "Open Folder View...",
        "category": "Better File Directory"
      },
      {
        "command": "better-file-directory.split",
        "title": "Split File Directory"
      },
      {
        "command": "better-file-directory.openFavorite",
        "title": "Open Favorite Folder...",
        "category": "Better File Directory",
        "icon": "$(star)"
      },
      {
        "command": "better-file-directory.addFavorite",
        "title": "Add to Favorites",
        "category": "Better File Directory",
        "icon": "$(plus)"
      },
      {
        "command": "better-file-directory.revealCurrentInOS",
        "title": "Reveal in File Explorer",
        "category": "Better File Directory",
        "icon": "$(default-view-icon)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "better-file-directory.revealCurrentInOS",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation@1"
        },
        {
          "command": "better-file-directory.current",
          "when": "view == workbench.explorer.fileView",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "better-file-directory.current",
          "when": "explorerResourceIsFolder",
          "group": "navigation@1"
        },
        {
          "command": "better-file-directory.addFavorite",
          "when": "explorerResourceIsFolder",
          "group": "navigation@2"
        }
        
      ]
    },
    "configuration": {
      "title": "Better File Directory",
      "properties": {
        "better-file-directory.favoriteFolders": {
          "type": "object",
          "description": "Configure favorite folders. (Key: Name, Value: Path)",
          "additionalProperties": {
            "type": "string",
            "description": "Full path to the folder"
          },
          "default": {}
        },
        "better-file-directory.customFolderIcons": {
          "type": "object",
          "description": "Map specific folder names to icons. (Key: Folder Name, Value: Icon Name)",
          "additionalProperties": {
            "type": "string",
            "description": "Icon name (e.g. folder-api)"
          },
          "default": {}
        },
        "better-file-directory.customFileIcons": {
          "type": "object",
          "description": "Map specific filenames to icons. (Key: Filename, Value: Icon Name)",
          "additionalProperties": {
            "type": "string",
            "description": "Icon name (e.g. webpack)"
          },
          "default": {}
        },
        "better-file-directory.customExtensionIcons": {
          "type": "object",
          "description": "Map extensions to icons. (Key: Extension, Value: Icon Name)",
          "additionalProperties": {
            "type": "string",
            "description": "Icon name (e.g. react)"
          },
          "default": {}
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}