{
    "name": "better-file-directory",
    "displayName": "Better-File-Directory",
    "description": "Visually manage your files with large thumbnails. Move files easily between folders using a modern grid view.",
    "publisher": "ttdragon0722",
    "icon": "icon.png",
    "version": "0.0.4",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:better-file-directory.current",
        "onCommand:better-file-directory.open"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ttdragon0722/better-file-directory.git"
    },
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "better-file-directory.current",
                "title": "View Current Folder",
                "category": "Better File Directory"
            },
            {
                "command": "better-file-directory.open",
                "title": "Open Folder View...",
                "category": "Better File Directory"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "better-file-directory.current",
                    "when": "explorerResourceIsFolder",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "typescript-eslint": "^8.52.0",
        "eslint": "^9.39.2",
        "typescript": "^5.9.3",
        "@vscode/test-cli": "^0.0.12",
        "@vscode/test-electron": "^2.5.2"
    }
}
